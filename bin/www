#!/usr/bin/env node

const Server = require('../src/server');
const port = normalizePort(process.env.PORT || '8080');

new Server().listen(port)

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}
